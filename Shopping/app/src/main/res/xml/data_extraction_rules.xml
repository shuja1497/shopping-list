<?xml version="1.0" encoding="utf-8"?>
<!--
    Data extraction rules for Android 12+ (API 31+).
    See https://developer.android.com/about/versions/12/backup-restore#xml-changes
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude the encrypted Room database from cloud backup -->
        <exclude domain="database" path="shopping_db" />
        <exclude domain="database" path="shopping_db-shm" />
        <exclude domain="database" path="shopping_db-wal" />
        <exclude domain="database" path="shopping_db-journal" />

        <!-- Exclude encrypted shared preferences (contains DB passphrase) -->
        <exclude domain="sharedpref" path="db_secure_prefs.xml" />
    </cloud-backup>

    <device-transfer>
        <!-- Exclude sensitive files from device-to-device transfer as well -->
        <exclude domain="database" path="shopping_db" />
        <exclude domain="database" path="shopping_db-shm" />
        <exclude domain="database" path="shopping_db-wal" />
        <exclude domain="database" path="shopping_db-journal" />
        <exclude domain="sharedpref" path="db_secure_prefs.xml" />
    </device-transfer>
</data-extraction-rules>
